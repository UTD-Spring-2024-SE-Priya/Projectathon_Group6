// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?

  ideas    ProjectIdea[]
  userInfo UserInfo?
}

model UserInfo {
  id                    Int    @id @default(autoincrement())
  userId                Int    @unique
  skills                String
  programming_languages String
  interests             String

  user User @relation(fields: [userId], references: [id])
}

model ProjectIdea {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  userId      Int

  user User @relation(fields: [userId], references: [id])
}
